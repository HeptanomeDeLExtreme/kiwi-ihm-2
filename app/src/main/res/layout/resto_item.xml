<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/photo"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/photo"
        android:textStyle="bold"
        tools:text="Restaurant" />

    <TextView
        android:id="@+id/prixResto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nom"
        android:layout_below="@+id/photo"
        android:text="€ € € €"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_toEndOf="@+id/nom"
        android:background="@drawable/hommemarchant" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignTop="@+id/prixResto"
        android:background="@drawable/couverts" />

    <TextView
        android:id="@+id/textTempsChemin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="tempsChemin" />

    <TextView
        android:id="@+id/textTempsRepas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textTempsChemin"
        android:layout_alignTop="@+id/imageView3"
        android:text="tempsRepas" />

    <View
        style="@style/Divider"
        android:layout_alignParentBottom="true" />

</RelativeLayout>