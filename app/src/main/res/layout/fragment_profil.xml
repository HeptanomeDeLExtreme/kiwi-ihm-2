<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.kiwi.kiwi.ProfilFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/background"
        android:layout_marginTop="42dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelPseudo"
            android:id="@+id/textView2"
            android:textColor="#000000"
            android:layout_below="@+id/imageProfilUser"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/pseudoUser"
            android:width="300dp"
            android:height="40dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelPrenom"
            android:id="@+id/textView3"
            android:layout_below="@+id/pseudoUser"
            android:layout_alignParentStart="true"
            android:textColor="#000000" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/prenomUser"
            android:width="300dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelNom"
            android:id="@+id/textView4"
            android:layout_below="@+id/prenomUser"
            android:layout_alignParentStart="true"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:id="@+id/nomUser"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelMail"
            android:id="@+id/textView5"
            android:layout_below="@+id/nomUser"
            android:layout_alignParentStart="true"
            android:textColor="#000000" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/mailUser"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelMonProfil"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:singleLine="false"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:textAllCaps="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelJeMange"
            android:id="@+id/textView7"
            android:layout_below="@+id/mailUser"
            android:layout_alignParentStart="true"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginBottom="2dp"
            android:layout_alignParentEnd="true"
            android:textAllCaps="true"
            android:layout_marginTop="0dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelVegan"
            android:id="@+id/checkBoxVegan"
            android:checked="false"
            android:layout_below="@+id/checkBoxVegetarien"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelSansGluten"
            android:id="@+id/checkBoxSansGluten"
            android:checked="false"
            android:layout_below="@+id/checkBoxVegan"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelSansLactose"
            android:id="@+id/checkBoxSansLactose"
            android:checked="false"
            android:layout_below="@+id/checkBoxSansGluten"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelHallal"
            android:id="@+id/checkBoxHallal"
            android:layout_below="@+id/checkBoxSansLactose"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelVegetarien"
            android:id="@+id/checkBoxVegetarien"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageProfilUser"
            android:background="@drawable/user43"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/editButton"
            android:layout_alignParentTop="false"
            android:background="@drawable/note48"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</ScrollView>