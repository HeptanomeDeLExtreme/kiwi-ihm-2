<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonEditIZLY"
        android:background="@drawable/note48"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="89dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailIZLY"
        android:layout_below="@+id/buttonEditIZLY"
        android:layout_centerHorizontal="true"
        android:text="login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Solde Restant : 50,40â‚¬"
        android:id="@+id/montantIZLY"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/mdpTextIZLY"
        android:layout_alignEnd="@+id/emailIZLY" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:background="@drawable/logo_insa"
        android:layout_alignTop="@+id/buttonEditIZLY"
        android:layout_toStartOf="@+id/emailIZLY" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connexion !"
        android:id="@+id/connexionIZLY"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/infoIZLY"
        android:layout_below="@+id/montantIZLY"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Login :"
        android:id="@+id/loginTextIZLY"
        android:layout_above="@+id/emailIZLY"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mot de passe :"
        android:id="@+id/mdpTextIZLY"
        android:layout_below="@+id/emailIZLY"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/mdpIZLY"
        android:layout_below="@+id/mdpTextIZLY"
        android:layout_centerHorizontal="true" />

</RelativeLayout>